{
  "compilerOptions": {
    "rootDir": "src",
    "declaration": true,
    "target": "es6",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "sourceMap": true,
    "outDir": "lib",
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noErrorTruncation": true,
    "allowJs": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["lib", "node_modules", "legacy"]
}

{
  "compilerOptions": {
    "rootDir": "src",
    "declaration": true,
    "target": "es6",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "sourceMap": true,
    "outDir": "lib",
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    // Enable for debug, but keep disabled after that as it slows down builds a lot
    // "noErrorTruncation": true,
    "allowJs": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["lib", "node_modules", "legacy"]
}
